<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Stud">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="Enter Student Details"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="S.No"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/et_stu_no"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="40dp"
            android:paddingLeft="5dp"
            android:hint="Enter Student Number" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="S.Name"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/et_stu_name"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="5dp"
            android:hint="Enter Student Name" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="Mobile"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/et_stu_mobile"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="40dp"
            android:paddingLeft="5dp"
            android:hint="Enter Mobile Number"
            android:inputType="phone" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="Email"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/et_stu_email"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="40dp"
            android:paddingLeft="5dp"
            android:hint="Enter Email Id" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="Course"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="20sp"
            />
        <!--<EditText
            android:id="@+id/et_stu_course"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="5dp"
            android:hint="Enter Course"
            android:backgroundTint="#fff"
            android:background="@drawable/rectangle"/>-->
        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="Date"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/stu_date"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="5dp"
            android:textSize="20sp"
            android:text="Select Date" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center">
        <Button
            android:id="@+id/stu_savebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="17sp"
            android:text="Save"/>
        <Button
            android:id="@+id/stu_backbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="17sp"
            android:text="Back"/>
    </LinearLayout>


</LinearLayout>