<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Login">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:id="@+id/logCardView2"
        app:cardCornerRadius="9dp"
        app:cardElevation="9dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/lo"
            android:layout_gravity="center"/>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">
        <TextView
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textStyle="bold"
            android:textSize="27sp"
            android:layout_marginBottom="10dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Username"
            android:textStyle="bold"
            android:textSize="17sp"/>
        <EditText
            android:id="@+id/et_log_uname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Enter Username"
            android:layout_marginTop="5dp"
            android:paddingLeft="5dp"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Password"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textSize="17sp"/>
        <EditText
            android:id="@+id/et_log_pw"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Enter Password"
            android:paddingLeft="5dp"
            android:layout_marginTop="5dp"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/logbtn2"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="4dp"
            android:text="Login"
            android:backgroundTint="#2f90"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forgot Password ?"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textSize="17sp"/>
        <EditText
            android:id="@+id/reset_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Enter Email Id"
            android:paddingLeft="5dp"
            android:layout_marginTop="5dp"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/request_pw_btn"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="3dp"
            android:text="Request Password"
            android:backgroundTint="#2f90"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>