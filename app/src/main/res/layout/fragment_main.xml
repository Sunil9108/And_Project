<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Main">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:id="@+id/logCardView2"
            app:cardCornerRadius="9dp"
            app:cardElevation="9dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/lo"
                android:layout_gravity="center"/>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="2dp"
            android:gravity="center">
            <android.support.v7.widget.CardView
                android:id="@+id/cardView_be"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="13dp"
                app:cardCornerRadius="9dp">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="B.E"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/cardView_bse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                app:cardElevation="13dp"
                app:cardCornerRadius="9dp">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="B.Sc"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center">
            <android.support.v7.widget.CardView
                android:id="@+id/cardView_mba"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="13dp"
                app:cardCornerRadius="9dp">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="M.C.A"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/cardView_mca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                app:cardElevation="13dp"
                app:cardCornerRadius="9dp">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="M.S"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#fff">
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/add_stu"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_person_add_black_24dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add"
                    android:textColor="#f00"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/srch_stu"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_search_black_24dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search"
                    android:textColor="#f00"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/delete_stu"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_delete_black_24dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:textColor="#f00"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>


</LinearLayout>